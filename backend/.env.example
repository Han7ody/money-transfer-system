# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/money_transfer_db?schema=public"

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration (IMPORTANT: Use a strong secret in production!)
JWT_SECRET="your-super-secure-jwt-secret-key-min-256-bits-change-this-in-production"

# CORS Configuration
FRONTEND_URL="http://localhost:3000"

# Redis Configuration (Optional - for caching)
REDIS_URL="redis://localhost:6379"

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR="uploads"

# Admin Default Credentials (Change after first login!)
ADMIN_EMAIL="admin@moneytransfer.com"
ADMIN_PASSWORD="Admin@123456"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

